---
import { Colors } from "../constants/Colors";
const { text, bgColor = Colors.PurpleMed, textColor = Colors.PurpleLight } = Astro.props;
---

<span class="pill" style={`--pill-bg-color: ${bgColor}; --pill-text-color: ${textColor}`}>
  {text}
</span>

<style>
.pill {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  font-size: 0.875rem;
  font-weight: 500;
  border-radius: 9999px;
  background-color: var(--pill-bg-color);
  color: var(--pill-text-color);
  white-space: nowrap;
  cursor: default;
}
</style>