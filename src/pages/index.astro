<Layout>
	<Welcome />
	<div style="display: flex; gap: 1rem;">
		<!-- <Link text="View Portfolio" href="/portfolio" />
		<Link text="GitHub" href="https://github.com" external={true} />
		<Pill text="Testing"/> -->
